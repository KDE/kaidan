{
    "id": "im.kaidan.kaidan",
    "rename-icon": "kaidan",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "kaidan",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=all",
        "--device=dri",
        "--env=LD_LIBRARY_PATH=/usr/lib/",
        "--filesystem=home",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "separate-locales": false,
    "modules": [
        {
            "name": "kdsingleapplication",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DKDSingleApplication_QT6=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/KDAB/KDSingleApplication/archive/refs/tags/v1.1.0.tar.gz",
                    "sha256": "1f19124c0aa5c6fffee3da174f7d2e091fab6dca1e123da70bb0fe615bfbe3e8"
                }
            ]
        },
        {
            "name": "kirigami-addons",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-1.4.0.tar.xz",
                    "sha256": "56e3ceb52055b5603320ea08b27d3673d32a391a8d58646d998227d8b51f0a93"
                }
            ]
        },
        {
            "name": "kquickimageeditor",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kquickimageeditor/kquickimageeditor-0.5.1.tar.xz",
                    "sha256": "f08271f368ead077fa3ed95c32446dd873f8b371d9756aefb757bea323339b29"
                }
            ]
        },
        {
            "name": "ffmpegthumbs",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "sha256": "2d22f2342f38cb4c09c17a691ffebcf9a09b2025a501f45e688b952319c10de9",
                    "url": "https://download.kde.org/stable/release-service/24.12.3/src/ffmpegthumbs-24.12.3.tar.xz"
                }
            ]
        },
        {
            "name": "libprotobuf-c",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-protoc"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protobuf-c/protobuf-c.git"
                }
            ]
        },
        {
            "name": "libomemo-c",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/dino/libomemo-c.git",
                    "branch": "omemo"
                }
            ]
        },
        {
            "name": "qxmpp",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_EXAMPLES=OFF",
                "-DBUILD_OMEMO=ON",
                "-DBUILD_TESTING=OFF",
                "-DQT_VERSION_MAJOR=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/unstable/qxmpp/qxmpp-1.10.3.tar.xz",
                    "sha256": "b52eba1c0be650a2b9b0505969db70729a6ded4217f2cc63f609791a77f5efe4"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "kaidan",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
