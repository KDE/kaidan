{
    "id": "im.kaidan.kaidan",
    "rename-icon": "kaidan",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "kaidan",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=all",
        "--device=dri",
        "--env=LD_LIBRARY_PATH=/usr/lib/",
        "--filesystem=home",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets"
    ],
    "separate-locales": false,
    "modules": [
        {
            "name": "kdsingleapplication",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DKDSingleApplication_QT6=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/KDAB/KDSingleApplication/archive/refs/tags/v1.2.0.tar.gz",
                    "sha256": "ff4ae6a4620beed1cdb3e6a9b78a17d7d1dae7139c3d4746d4856b7547d42c38"
                }
            ]
        },
        {
            "name": "kquickimageeditor",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kquickimageeditor/kquickimageeditor-0.6.0.tar.xz",
                    "sha256": "11ed4ce1c164a8b6d50bbc1548b5849ab75d5fb837619b90f2cea51ed122547a"
                }
            ]
        },
        {
            "name": "ffmpegthumbs",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.12.1/src/ffmpegthumbs-25.12.1.tar.xz",
                    "sha256": "ab82433cfda2fb28767e7b9de09ea4b6b6f6d1aba367e9fc77defcf451748c5f"
                }
            ]
        },
        {
            "name": "qtkeychain",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/frankosterfeld/qtkeychain/archive/0.15.0.tar.gz",
                    "sha256": "f4254dc8f0933b06d90672d683eab08ef770acd8336e44dfa030ce041dc2ca22"
                }
            ],
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DLIB_INSTALL_DIR=/app/lib",
                "-DBUILD_TRANSLATIONS=NO",
                "-DBUILD_WITH_QT6=ON"
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/mkspecs"
            ]
        },
        {
            "name": "qxmpp",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DBUILD_EXAMPLES=OFF",
                "-DBUILD_OMEMO=ON",
                "-DWITH_GSTREAMER=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/unstable/qxmpp/qxmpp-1.14.2.tar.xz",
                    "sha256": "3f63c05e65da40b844c8c5801d590f5a7ba02d4f83420c4471bbe6ce39d0a61b"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/lib/pkgconfig"
            ],
            "modules": [
                {
                    "name": "libomemo-c",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-DBUILD_SHARED_LIBS=ON",
                        "-DCMAKE_POLICY_VERSION_MINIMUM=3.5"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/dino/libomemo-c/archive/refs/tags/v0.5.1.tar.gz",
                            "sha256": "d1b65dbf7bccc67523abfd5e429707f540b2532932d128b2982f0246be2b22a0"
                        }
                    ],
                    "modules": [
                        {
                            "name": "libprotobuf-c",
                            "buildsystem": "autotools",
                            "config-opts": [
                                "--disable-protoc"
                            ],
                            "sources": [
                                {
                                    "type": "archive",
                                    "url": "https://github.com/protobuf-c/protobuf-c/archive/refs/tags/v1.5.2.tar.gz",
                                    "sha256": "cea46eeaa19c52924938b582c5d128a6ed3b6fb5b3f4677476a1781cc06e03f3"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "qml6glsink",
            "buildsystem": "meson",
            "no-make-install": true,
            "post-install": [
                "install -Dt /app/lib/gstreamer-1.0/ ext/qt6/libgstqml6.so"
            ],
            "config-opts": [
                "-Dqt6=enabled",
                "-Dqt-egl=enabled",
                "-Dqt-wayland=enabled",
                "-Dqt-x11=enabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gstreamer.freedesktop.org/src/gst-plugins-good/gst-plugins-good-1.26.10.tar.xz",
                    "sha256": "7beacb5daba3c6751ebc1c85017d9b1d6de64e24798125932c73c8b1dbeb3bc9"
                }
            ]
        },
        {
            "name": "kaidan",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
