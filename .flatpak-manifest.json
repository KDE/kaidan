{
    "id": "im.kaidan.kaidan",
    "rename-icon": "kaidan",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "kaidan",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=all",
        "--device=dri",
        "--env=LD_LIBRARY_PATH=/usr/lib/",
        "--filesystem=home",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets"
    ],
    "separate-locales": false,
    "modules": [
        {
            "name": "kdsingleapplication",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DKDSingleApplication_QT6=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/KDAB/KDSingleApplication/archive/refs/tags/v1.2.0.tar.gz",
                    "sha256": "ff4ae6a4620beed1cdb3e6a9b78a17d7d1dae7139c3d4746d4856b7547d42c38"
                }
            ]
        },
        {
            "name": "kirigami-addons",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-1.4.0.tar.xz",
                    "sha256": "56e3ceb52055b5603320ea08b27d3673d32a391a8d58646d998227d8b51f0a93"
                }
            ]
        },
        {
            "name": "kquickimageeditor",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kquickimageeditor/kquickimageeditor-0.5.1.tar.xz",
                    "sha256": "f08271f368ead077fa3ed95c32446dd873f8b371d9756aefb757bea323339b29"
                }
            ]
        },
        {
            "name": "ffmpegthumbs",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.08.2/src/ffmpegthumbs-25.08.2.tar.xz",
                    "sha256": "d2f1781bcdb0f1ca2fe6abbcde93c0d84507f0cee23650dfd94eb8a1b7e94c8c"
                }
            ]
        },
        {
            "name": "qtkeychain",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/frankosterfeld/qtkeychain/archive/0.15.0.tar.gz",
                    "sha256": "f4254dc8f0933b06d90672d683eab08ef770acd8336e44dfa030ce041dc2ca22"
                }
            ],
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DLIB_INSTALL_DIR=/app/lib",
                "-DBUILD_TRANSLATIONS=NO",
                "-DBUILD_WITH_QT6=ON"
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/mkspecs"
            ],
            "modules": [
                {
                    "name": "libsecret",
                    "buildsystem": "meson",
                    "config-opts": [
                        "-Dmanpage=false",
                        "-Dvapi=false",
                        "-Dgtk_doc=false",
                        "-Dintrospection=false",
                        "-Dcrypto=disabled"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://download.gnome.org/sources/libsecret/0.21/libsecret-0.21.7.tar.xz",
                            "sha256": "6b452e4750590a2b5617adc40026f28d2f4903de15f1250e1d1c40bfd68ed55e"
                        }
                    ],
                    "cleanup": [
                        "/bin/secret-tool",
                        "/include",
                        "/lib/pkgconfig"
                    ]
                }
            ]
        },
        {
            "name": "qxmpp",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_EXAMPLES=OFF",
                "-DBUILD_OMEMO=ON",
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/unstable/qxmpp/qxmpp-1.11.3.tar.xz",
                    "sha256": "36b81d7ca269731ce9313a3346af87d84e234f15703ad3adafd2f9308ae188a5"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/lib/pkgconfig"
            ],
            "modules": [
                {
                    "name": "libomemo-c",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-DBUILD_SHARED_LIBS=ON"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/dino/libomemo-c/archive/refs/tags/v0.5.1.tar.gz",
                            "sha256": "d1b65dbf7bccc67523abfd5e429707f540b2532932d128b2982f0246be2b22a0"
                        }
                    ],
                    "modules": [
                        {
                            "name": "libprotobuf-c",
                            "buildsystem": "autotools",
                            "config-opts": [
                                "--disable-protoc"
                            ],
                            "sources": [
                                {
                                    "type": "archive",
                                    "url": "https://github.com/protobuf-c/protobuf-c/archive/refs/tags/v1.5.2.tar.gz",
                                    "sha256": "cea46eeaa19c52924938b582c5d128a6ed3b6fb5b3f4677476a1781cc06e03f3"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "kaidan",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
